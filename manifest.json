{
  "manifest_version": 3,
  "name": "评论洞察",
  "version": "1.0.0",
  "description": "从社交媒体平台提取评论并进行AI分析，生成洞察摘要和情感分析",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "downloads",
    "notifications",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.tiktok.com/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://*.bilibili.com/*",
    "https://b23.tv/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.tiktok.com/*",
        "https://*.twitter.com/*",
        "https://*.x.com/*",
        "https://*.bilibili.com/*",
        "https://b23.tv/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "评论洞察"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": []
}